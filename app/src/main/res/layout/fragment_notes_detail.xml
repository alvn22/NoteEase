<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/P2"
    android:clickable="true"
    android:focusable="true"
    android:padding="24dp">

    <LinearLayout
        android:id="@+id/btnBackDetailNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:tint="@color/P3"
            tools:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Back"
            android:textColor="@color/P3"
            android:textSize="16sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSaveNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:fontFamily="@font/poppins_medium"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/P2"
        android:textSize="14sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btnBackDetailNotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnBackDetailNotes"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnShareNotes"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Share Note"
        android:scaleType="centerInside"
        android:src="@drawable/baseline_share_24"
        app:tint="@color/P3"
        app:layout_constraintBottom_toBottomOf="@id/btnSaveNotes"
        app:layout_constraintEnd_toStartOf="@id/btnSaveNotes"
        app:layout_constraintTop_toTopOf="@id/btnSaveNotes" />

    <EditText
        android:id="@+id/etNotesTitleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:fontFamily="@font/poppins_bold"
        android:hint="Notes Title"
        android:inputType="textCapWords|textMultiLine"
        android:textColor="@color/P3"
        android:textColorHint="@color/S3"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnBackDetailNotes" />

    <EditText
        android:id="@+id/etNotesBodyDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:fontFamily="@font/poppins"
        android:gravity="top|start"
        android:hint="Type something..."
        android:inputType="textCapSentences|textMultiLine"
        android:lineSpacingExtra="4dp"
        android:scrollbars="vertical"
        android:textColor="@color/P3"
        android:textColorHint="@color/S3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etNotesTitleDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>