<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_notes">

    <fragment
    android:id="@+id/nav_notes"
    android:name="com.example.noteease.ui.notes.NotesHomeFragment"
    android:label="Notes"
    tools:layout="@layout/fragment_notes_home" />

    <fragment
        android:id="@+id/nav_todos"
        android:name="com.example.noteease.ui.todos.TodosHomeFragment"
        android:label="To-Dos"
        tools:layout="@layout/fragment_todos_home" />

    <fragment
        android:id="@+id/nav_notes_detail"
        android:name="com.example.noteease.ui.notes.NoteDetailFragment"
        android:label="Note Detail"
        tools:layout="@layout/fragment_notes_detail">
        <argument
            android:name="noteId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_create_note_to_note_home"
            app:destination="@id/nav_notes" />
    </fragment>

    <fragment
        android:id="@+id/nav_todos_detail"
        android:name="com.example.noteease.ui.todos.TodosDetailFragment"
        android:label="Todo Detail"
        tools:layout="@layout/fragment_todos_detail">
        <argument
            android:name="todoId"
            app:argType="integer"
            android:defaultValue="-1" />
        <action
            android:id="@+id/action_create_todo_to_todo_home"
            app:destination="@id/nav_todos" />
    </fragment>

</navigation>